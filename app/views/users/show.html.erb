<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<% if @user.role == 'student' %>
  <p>
    <strong>Currently studying:</strong>
    <% @user.courses.each do |course| %>
      <%= course.name %>
    <% end %>
  </p>
<% elsif @user.role == 'instructor' %>
  <p>
    <strong>Currently teaching:</strong>
    <% @user.courses.each do |course| %>
      <%= course.name %>
    <% end %>
  </p>
<% end %>

<p>
  <strong>Role:</strong>
  <%= @user.role %>
</p>

<p>
  <%= link_to "Edit", edit_user_path(@user) %> |
  <%= link_to "Delete", @user, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", users_path %>
</p>
