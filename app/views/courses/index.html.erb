<table>
  <tr>
    <th>Name</th>
  </tr>
  <% for course in @courses %>
    <tr>
      <td><%= link_to(course.name, course) %></td>

      <% if current_user %>
        <% if current_user.role == 'admin' || current_user.role == 'instructor' %>
      <td><%= link_to "Edit", edit_course_path(course) %></td>
      <td><%= link_to "Delete", course, :confirm => 'Are you sure?', :method => :delete %></td>
      <% end %>
     <% end %>

    </tr>
  <% end %>
</table>

<% if current_user %>
  <% if current_user.role == 'admin' || current_user.role == 'instructor' %>
    <p><%= link_to "Create Course", new_course_path %></p> 
  <% end %>
<% end %>